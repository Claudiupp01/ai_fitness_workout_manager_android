<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Meal Type Icon -->
        <ImageView
            android:id="@+id/ivMealIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_nav_meals"
            app:tint="@color/primaryColor"
            android:layout_gravity="center_vertical" />

        <!-- Meal Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Meal Type and Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvMealType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Breakfast"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor" />

                <TextView
                    android:id="@+id/tvMealTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:30 AM"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary" />

            </LinearLayout>

            <!-- Meal Name -->
            <TextView
                android:id="@+id/tvMealName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Oatmeal with Berries"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Macros Row -->
            <TextView
                android:id="@+id/tvMealMacros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="350 kcal • 12g P • 45g C • 8g F"
                android:textSize="13sp"
                android:textColor="@color/textSecondary" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
