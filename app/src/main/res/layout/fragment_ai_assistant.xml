<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primaryColor"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:gravity="center_vertical">

        <!-- AI Avatar -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_ai_avatar">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_ai_assistant"
                app:tint="@color/primaryColor" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FitCoach AI"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online - Ready to help"
                android:textSize="12sp"
                android:textColor="@color/primaryLight" />

        </LinearLayout>

        <!-- Clear Chat Button -->
        <ImageView
            android:id="@+id/btnClearChat"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_clear_chat"
            app:tint="@color/white"
            android:contentDescription="Clear chat"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <!-- Chat Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="12dp" />

    <!-- Welcome Card (shown when no messages) -->
    <LinearLayout
        android:id="@+id/welcomeContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_ai_assistant"
            app:tint="@color/primaryColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Welcome to FitCoach AI!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="I'm your personal fitness and nutrition assistant. Ask me anything about workouts, meal plans, or healthy living!"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3" />

        <!-- Quick Suggestion Chips -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Try asking:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSuggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            app:singleLine="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSuggestion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a workout plan"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/primaryColor"
                app:chipStrokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Chip.Action" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSuggestion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggest healthy meals"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/primaryColor"
                app:chipStrokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Chip.Action" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSuggestion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to lose weight?"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/primaryColor"
                app:chipStrokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Chip.Action" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSuggestion4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best exercises for abs"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/primaryColor"
                app:chipStrokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Chip.Action" />

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Microphone Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMicrophone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_microphone"
            android:contentDescription="@string/voice_input"
            app:fabSize="mini"
            app:backgroundTint="@color/white"
            app:tint="@color/primaryColor"
            app:elevation="0dp"
            app:borderWidth="1dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilMessage"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask me anything..."
            app:boxCornerRadiusBottomEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusTopStart="24dp"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:imeOptions="actionSend" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_send"
            android:contentDescription="Send message"
            app:fabSize="normal"
            app:backgroundTint="@color/primaryColor"
            app:tint="@color/white" />

    </LinearLayout>

</LinearLayout>
