<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission for voice input (speech-to-text) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Permissions for camera and image processing -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ai_Fitness_Workout_Manager"
        tools:targetApi="31">

        <!-- Welcome Activity - Launcher -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activity (Login/Sign Up) -->
        <activity
            android:name=".AuthActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- User Profile Setup Activity -->
        <activity
            android:name=".UserProfileSetupActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Main Activity (Dashboard) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Meals Activity (Recipe Ideas) -->
        <activity
            android:name=".activity.MealsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Recipe Details Activity -->
        <activity
            android:name=".activity.RecipeDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Ingredient Recognition Activity -->
        <activity
            android:name=".activity.IngredientRecognitionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Recipe Recommendations Activity -->
        <activity
            android:name=".activity.RecipeRecommendationsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Workouts Activity -->
        <activity
            android:name=".activity.WorkoutsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Workout Details Activity -->
        <activity
            android:name=".activity.WorkoutDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- FileProvider for camera image capture -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>