<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission for voice input (speech-to-text) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ai_Fitness_Workout_Manager"
        tools:targetApi="31">

        <!-- Welcome Activity - Launcher -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activity (Login/Sign Up) -->
        <activity
            android:name=".AuthActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- User Profile Setup Activity -->
        <activity
            android:name=".UserProfileSetupActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Main Activity (Dashboard) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Meals Activity (Recipe Ideas) -->
        <activity
            android:name=".activity.MealsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Recipe Details Activity -->
        <activity
            android:name=".activity.RecipeDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>